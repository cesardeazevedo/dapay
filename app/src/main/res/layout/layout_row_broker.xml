<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="64dip">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_height="fill_parent"
            app:srcCompat="@mipmap/ic_foxbit"
            android:id="@+id/broker_row_picture"
            android:layout_weight="0.32"
            android:layout_width="70dp" />

        <TextView
            android:text="TextView"
            android:id="@+id/broker_row_name"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:layout_toEndOf="@id/broker_row_picture"
            android:layout_toStartOf="@+id/broker_row_country"
            android:layout_weight="1.86"
            android:textColor="#222"
            android:layout_width="200dp" />

        <TextView
            android:text="TextView"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/broker_row_country"
            android:layout_alignBaseline="@+id/broker_row_name"
            android:layout_alignBottom="@+id/broker_row_name"
            android:textSize="18sp"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:textColor="#444" />
    </LinearLayout>

</RelativeLayout>