<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.dapay.app">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".Login_BT_Activity"
            android:label="@string/title_activity_login" />
        <activity android:name=".ConfigPayActivity" />
        <activity android:name=".PayActivity" />
        <activity android:name=".BillActivity" />
        <activity android:name=".SelectBrokerActivity" />
        <activity android:name=".Register_BT_Activity" />
        <activity
            android:name=".SelectProfileActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ProfilePinLoginActivity" />
        <activity android:name=".CreateProfile_BT_Activity" />
        <activity android:name=".ProfileSettingsActivity"></activity>
    </application>

</manifest>